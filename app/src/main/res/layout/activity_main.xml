<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/background9"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/but_mylocation"
                android:layout_marginRight="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_location_on_24"
                android:background="@android:color/transparent"
                />

            <EditText
                android:id="@+id/et_city"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:hint="Insert City Name"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:background="@drawable/rounded"
                android:fontFamily="@font/montserrat_regular"
                android:paddingLeft="20dp"
                android:paddingVertical="10dp"
                />

            <ImageButton
                android:id="@+id/but_fetch"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_search_24"
                android:background="@android:color/transparent"
                />


        </LinearLayout>

        <!--        <LinearLayout-->
        <!--            android:layout_marginTop="20dp"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content">-->

        <TextView
            android:id="@+id/txt_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <!--        </LinearLayout>-->

        <TextView
            android:id="@+id/txt_desc"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:textSize="20sp"
            />



        <ImageView
            android:id="@+id/img_icon"
            android:layout_marginTop="10dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:layout_gravity="center"
            />


        <TextView
            android:id="@+id/txt_temp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:fontFamily="@font/montserrat"
            android:textSize="40sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom|right"
            android:paddingBottom="30dp"
            >

            <Button
                android:id="@+id/btn_save"
                android:layout_marginTop="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_favorite_border_24"
                />

            <Button
                android:id="@+id/btn_list"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_format_list_bulleted_24"/>



            <Button
                android:id="@+id/btn_background"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_image_24"
                />

            <Button
                android:id="@+id/btn_logout"
                android:layout_marginTop="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_baseline_exit_to_app_24"/>



        </LinearLayout>








    </LinearLayout>


</FrameLayout>
